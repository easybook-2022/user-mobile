{
  "expo": {
    "name": "EasyGO (User)",
    "slug": "easygo-user",
    "version": "0.0.22",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification.png",
          "color": "#ffffff"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.geottuse.serviceapp.user",
      "buildNumber": "2",
      "infoPlist": {
        "NSCameraUsageDescription": "EasyGO (User) uses camera to allow you to take a profile picture",
        "NSMicrophoneUsageDescription": "EasyGO (User) does not need microphone",
        "NSLocationWhenInUseUsageDescription": "EasyGO (User) tracks you to show you the nearest restaurants, salons and stores"
      }
    },
    "android": {
      "package": "com.geottuse.serviceapp.user",
      "versionCode": 0,
      "permissions": ["CAMERA","ACCESS_MEDIA_LOCATION", "ACCESS_FINE_LOCATION"],
      "googleServicesFile": "./google-services.json"
    }
  }
}
